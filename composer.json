{
    "name": "arokettu/json",
    "description": "ext-json wrapper with sane defaults",
    "keywords": ["json"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://sandfox.dev/php/json.html",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me",
            "role": "developer",
            "homepage": "https://sandfox.me/"
        }
    ],
    "support": {
        "issues": "https://gitlab.com/sandfox/php-json/-/issues",
        "source": "https://gitlab.com/sandfox/php-json",
        "docs": "https://arokettu-json.readthedocs.io/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Arokettu\\Json\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arokettu\\Json\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "symfony/polyfill-php83": "^1.27"
    },
    "require-dev": {
        "laminas/laminas-code": "^4.7.1",
        "phpunit/phpunit": "^9.6.15",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.09.11",
        "squizlabs/php_codesniffer": "*"
    }
}
